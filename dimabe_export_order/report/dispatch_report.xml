<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_dispatch_guide">
        <t t-call="web.html_container">
            <div class="page" style="margin:auto">
                <t t-foreach="docs" t-as="d">
                    <div style="width:100%;display: inline-block;">
                        <div style="width:250px;float:left;">
                            <img t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)"
                                 style="height:75px;"/>
                        </div>
                        <div style="width:252px;margin:auto;padding:10px;">
                            <table style="margin:auto;">
                                <tr>
                                    <td style="text-align:center;">
                                        <span t-field="res_company.name"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:center;">
                                        <span t-field="res_company.street"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:center;">
                                        <span t-field="res_company.city"></span>
                                        <span t-field="res_company.country_id"></span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div style="width:260px;border:3px solid;position:absolute;top:0px;right:10px;">
                            <div>
                                <table>
                                    <tr>
                                        <td style="text-align:center;">
                                            R.U.T:
                                            <span t-field="res_company.invoice_rut"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;">
                                            GUIA DE DESPACHO ELECTRONICA
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;">
                                            N°
                                            <span t-field="d.guide_number"></span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div style="width:50%;height:9%;"></div>
                    <br/>
                    <span style="text-align:left;" t-esc="d.create_date.date()"></span>
                    <div style="width:100%;height:15%;border:1px solid;">

                        <table style="width:100%;margin:auto;" cellspacing="10">
                            <tr>
                                <td>
                                    <strong>SEÑOR(ES):</strong>
                                </td>
                                <td>
                                    <span t-field="d.partner_id"></span>
                                </td>
                                <td>
                                    <strong>R.U.T:</strong>
                                </td>
                                <td>
                                    <span t-esc="d.partner_id.invoice_rut"></span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>DIRECCION:</strong>
                                </td>
                                <td>
                                    <span t-field="d.partner_id.street"></span>
                                </td>
                                <td>
                                    <strong>TELEFONO:</strong>
                                </td>
                                <td>
                                    <span t-field="d.partner_id.phone"></span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>COMUNA:</strong>
                                </td>
                                <td>
                                    <span t-field="d.partner_id.state_id"></span>
                                </td>
                                <td>
                                    <strong>VENCTO:</strong>
                                </td>
                                <td><![CDATA[&nbsp;]]></td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>GIRO:</strong>
                                </td>
                                <td><![CDATA[&nbsp;]]></td>
                                <td>
                                    <strong>COND.PAGO:</strong>
                                </td>
                                <td><![CDATA[&nbsp;]]></td>
                            </tr>
                            <t t-if="d.type_of_dispatch == 'nac'">
                                <tr>
                                    <td>
                                        <strong>TIPO DE TRASLADO:</strong>
                                    </td>
                                    <td>
                                        <span t-field="d.type_of_transfer"></span>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                    <div style="width:100%;height:50%;border:1px solid;">
                        <table style="width:100%;">
                            <th>CANTIDAD</th>
                            <th>DETALLES</th>
                            <th>VALOR UNITARIO</th>
                            <t t-foreach="d.move_ids_without_package" t-as="m">
                                <tr>
                                    <td>
                                        <t t-esc="'{0:,.2f}'.format(int(m.quantity_done))"/>
                                    </td>
                                    <td>
                                        <span t-field="m.product_id"></span>
                                    </td>
                                    <td>
                                        <span t-field="m.product_id.lst_price"></span>
                                    </td>
                                </tr>
                                <t t-if="m.id == d.move_ids_without_package[-1].id">
                                    <tr>

                                        <td colspan="3">
                                            <t t-if="d.type_of_dispatch == 'exp'">
                                                <table style="border:1px solid;">
                                                    <tr>
                                                        <td>
                                                            KILOS NETOS
                                                        </td>
                                                        <td>
                                                            <t t-if="d.net_weight_dispatch == None">
                                                                <td><![CDATA[&nbsp;]]></td>
                                                            </t>
                                                            <t t-if="d.net_weight_dispatch != None">
                                                                <span t-field="d.net_weight_dispatch"></span>
                                                            </t>
                                                        </td>
                                                        <td>N° Contenedor</td>
                                                        <td>
                                                            <t t-if="d.container_number == None">
                                                                <td><![CDATA[&nbsp;]]></td>
                                                            </t>
                                                            <t t-if="d.container_number != None">
                                                                <span t-field="d.container_number"></span>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>KILOS BRUTOS:</td>
                                                        <td>
                                                            <t t-if="d.gross_weight_dispatch == None">
                                                                <td><![CDATA[&nbsp;]]></td>
                                                            </t>
                                                            <t t-if="d.gross_weight_dispatch != None">
                                                                <span t-field="d.gross_weight_dispatch"></span>
                                                            </t>
                                                        </td>
                                                        <td>SELLO NAVIERA</td>
                                                        <td>
                                                            <t t-if="d.sell_shipping == None">
                                                                <td><![CDATA[&nbsp;]]></td>
                                                            </t>
                                                            <t t-if="d.sell_shipping != None">
                                                                <span t-field="d.sell_shipping"></span>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>TARA CONTE:</td>
                                                        <td>
                                                            <t t-if="d.tare_container_weight_dispatch == None">
                                                                <td><![CDATA[&nbsp;]]></td>
                                                            </t>
                                                            <t t-if="d.tare_container_weight_dispatch != None">
                                                                <span t-field="d.tare_container_weight_dispatch"></span>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>PESO VGM:</td>
                                                        <td>
                                                            <t t-if="d.vgm_weight_dispatch == None">
                                                                <td><![CDATA[&nbsp;]]></td>
                                                            </t>
                                                            <t t-if="d.vgm_weight_dispatch != None">
                                                                <span t-field="d.vgm_weight_dispatch"></span>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Nota</td>
                                                        <td colspan="3">
                                                            <t t-esc="d.note_dispatched.get_full_note()"></t>
                                                        </td>
                                                        <td></td>
                                                        <td></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Nave:</td>
                                                        <td>
                                                            <t t-if="d.shipping_id.type_transport == 'terrestre'">
                                                                <span t-field="d.type_transport"></span>
                                                            </t>
                                                            <t t-elif="d.shipping_id.type_transport != 'terrestre'">
                                                                <span t-field="d.shipping_id.ship"></span>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>N° DUS:</td>
                                                        <td>
                                                            <span t-field="d.dus_number"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>PTO EMBARQUE:</td>
                                                        <td>
                                                            <span t-field="d.shipping_id.departure_port"></span>
                                                        </td>
                                                        <td>SELLO INVERNADA</td>
                                                        <td>
                                                            <span t-field="d.sell_truck"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>PTO DESCARGA</td>
                                                        <td>
                                                            <span t-field="d.shipping_id.arrival_port"></span>
                                                        </td>
                                                        <td>N° RESERVA</td>
                                                        <td>
                                                            <span t-field="d.booking_number"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>TRANSPORTE:</td>
                                                        <td>
                                                            <span t-field="d.transport"></span>
                                                        </td>
                                                        <td>CANDADO GPS:</td>
                                                        <td>
                                                            <span t-field="d.gps_lock"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>CHOFER:</td>
                                                        <td>
                                                            <span t-field="d.carrier_id"></span>
                                                        </td>
                                                        <td>BOTON GPS:</td>
                                                        <td>
                                                            <span t-field="d.gps_button"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>RUT:</td>
                                                        <td>
                                                            <span t-field="d.carrier_rut"></span>
                                                        </td>
                                                        <td>CLIENTE:</td>
                                                        <td>
                                                            <span t-field="d.partner_id"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>CELULAR:</td>
                                                        <td>
                                                            <span t-field="d.carrier_cell_phone"></span>
                                                        </td>
                                                        <td>SELLO SAG:</td>
                                                        <td>
                                                            <span t-field="d.sell_sag"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td><![CDATA[&nbsp;]]></td>
                                                        <td><![CDATA[&nbsp;]]></td>
                                                        <td>N° Pedido:</td>
                                                        <td>
                                                            <span t-field="d.name"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <![CDATA[&nbsp;]]>
                                                    </tr>
                                                    <tr>
                                                        <td>Pte Camion:</td>
                                                        <td>
                                                            <span t-field="d.carrier_truck_patent"></span>
                                                        </td>
                                                        <td>Hora Llegada:</td>
                                                        <td>
                                                            <t t-esc="'%02d:%02d' % (int(d.hour_arrival),d.hour_arrival % 1 * 60)"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Pte Rampla:</td>
                                                        <td>
                                                            <span t-field="d.carrier_cart_patent"></span>
                                                        </td>
                                                        <td>Hora Salida</td>
                                                        <td>
                                                            <t t-esc="'%02d:%02d' % (int(d.hour_departure),d.hour_departure % 1 * 60)"/>
                                                        </td>

                                                    </tr>
                                                </table>
                                                <span style="text-align:center;"
                                                      t-esc="d.note_dispatched.get_footer_note()"></span>
                                            </t>
                                            <t t-elif="d.type_of_dispatch == 'nac'">
                                                <table style="width:433px;border:1px solid;">
                                                    <tr style="border_right:1px solid;">
                                                        <td>CHOFER</td>
                                                        <td>
                                                            <t t-if="d.carrier_id == None">
                                                                <![CDATA[&nbsp;]]>
                                                            </t>
                                                            <t t-elif="d.carrier_id != None">
                                                                <span t-field="d.carrier_id"></span>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                    <tr style="border_right:1px solid;">
                                                        <td>RUT</td>
                                                        <td>
                                                            <span t-field="d.carrier_rut"></span>
                                                        </td>
                                                    </tr>
                                                    <tr style="border_right:1px solid;">
                                                        <td>PATENTE CAMION</td>
                                                        <td>
                                                            <span t-field="d.carrier_truck_patent"></span>
                                                        </td>
                                                    </tr>
                                                    <t t-if="d.carrier_cart_patent != ''">
                                                        <td>PATENTE CARRO</td>
                                                        <td>
                                                            <span t-field="d.carrier_cart_patent"></span>
                                                        </td>
                                                    </t>
                                                </table>
                                            </t>
                                        </td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </t>
                            </t>
                        </table>

                    </div>
                    <div style="width:100%;height:10%;border:1px solid;">
                        <table>
                            <tr>
                                <td>Nombre:</td>
                                <td style="border-bottom:1pt dotted black;width:50%;"></td>
                                <td>Rut:</td>
                                <td style="border-bottom:1pt dotted black;width:50%;"></td>
                            </tr>

                            <tr>
                                <td>Recinto:</td>
                                <td style="border-bottom:1pt dotted black;width:50%;"></td>
                            </tr>
                            <tr>
                                <td>Fecha:</td>
                                <td style="border-bottom:1pt dotted black;width:50%;"></td>
                                <td>Firma:</td>
                                <td style="border-bottom:1pt dotted black;width:50%;"></td>
                            </tr>
                        </table>
                    </div>
                    <br/>
                </t>
            </div>
        </t>
    </template>

